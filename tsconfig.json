{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "target": "ES6",
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "typings/**",
    "node_modules"
  ]
}